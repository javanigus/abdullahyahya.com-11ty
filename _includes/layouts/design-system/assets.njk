<!Doctype html>
<html lang="{{ site.language }}">
  <head>
    <title>{{ title }}</title>
    <meta charset="utf-8">
    <meta name="description" content="Design-system: assets for {{ site.name }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/design-system.css">

    {% include 'partials/js-detect.njk' %}
  </head>
  <body class="assets design-system">
    {% max_width %}
      {% responsive %}
        {% container "100_100_29_29_29" %}
          {% include 'partials/ds-aside.njk' %}
        {% end_container %}
        {% container "85_85_71_71_71", "", "main" %}
          {% responsive %}
            {% container "100_100_83_83_83", "", "centered" %}
              <div class="main">
                <main>
                  <section>
                    <div class="post">
                      <div class="post__block">
                        <div class="spacer-40"></div>
                        {% responsive %}
                          {% container "80_80_80_80_80", "", "centered" %}
                            {{ content | safe }}
                          {% end_container %}
                        {% endresponsive %}
                        <div class="spacer-40"></div>
                      </div>
                    </div>
                  </section>
                </main>
              </div>
            {% end_container %}
          {% endresponsive %}
        {% end_container %}
      {% endresponsive %}
    {% end_max_width %}
    <script src="/js/index.js"></script>
  </body>
</html>
