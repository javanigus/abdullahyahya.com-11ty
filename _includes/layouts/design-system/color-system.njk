<!Doctype html>
<html lang="{{ site.language }}">
  <head>
    <title>{{ title }}</title>
    <meta charset="utf-8">
    <meta name="description" content="Design-system: assets for {{ site.name }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/design-system.css">

    {% include 'partials/js-detect.njk' %}
  </head>
  <body class="assets design-system">
    {% max_width %}
      {% responsive %}
        {% container "100_100_33_33_33" %}
          {% include 'partials/ds-aside.njk' %}
        {% end_container %}
        {% container "85_85_66_66_66", "", "main" %}
          {% responsive %}
            {% container "100_100_83_83_83", "", "centered" %}
              <div class="main">
                <main>
                  <section>
                    <div class="post">
                      <div class="post__block">
                        <div class="spacer-40"></div>
                        {% responsive %}
                          {% container "80_80_80_80_80", "", "centered" %}
                          <h1>{{ title }}</h1>
                          {% for title, colorsKit in colors %}
                            <h2>{{ title }}</h2>
                            {% responsive %}

                            {% for theme, param in colorsKit %}

                              {% if(param.color or param.label) %}
                                {% color_block theme, param.color, param.label %}
                              {% elif theme == 'color' %}
                                {% set nextColor = colorsKit[theme] %}
                              {% elif theme == 'label' %}
                                {% color_block title, nextColor, colorsKit[theme] %}
                              {% endif %}

                            {% endfor %}
                            {% endresponsive %}
                            <div class="spacer-16"></div>
                          {% endfor %}
                          {% end_container %}
                        {% endresponsive %}                        <div class="spacer-40"></div>
                      </div>
                    </div>
                  </section>
                </main>
              </div>
            {% end_container %}
          {% endresponsive %}
        {% end_container %}
      {% endresponsive %}
    {% end_max_width %}
    <script src="/js/index.js"></script>
  </body>
</html>
