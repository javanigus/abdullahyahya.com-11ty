<nav aria-label="{{ site.name }} main menu">
  <div class="main-menu__button-container">
  </div>
  <ul class="main-menu" role="menubar" aria-label="{{ site.name }} main menu">
  {% for link, href in menu.links %}
      <li class="main-menu__item" role="none">
          <a class="main-menu__link
          {% if(href == page.url) %} main-menu__link--current {% endif %}" 
          {% if(href == page.url) %} aria-current="page" {% endif %}
          href="{{ href }}">{{ link }}</a>
      </li>
  {% endfor %}
  </ul>
</nav>