.share-block {
  margin-bottom: 20px;
}

.share-block p {
  border-top: 4px solid <%= colors.Grey["300"].color %>;
  float: left;
  font-size: 13px;
  font-weight: 700;
  line-height: 13px;
  margin: 0;
  padding: 13px 0;
}

.share-block ul {
  width: 100%;
  margin: 0;
}

.share-block ul li {
  margin: 0 5px 5px 0;
}