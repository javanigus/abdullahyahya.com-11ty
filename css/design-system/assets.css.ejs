.assets-block__inner {
  min-height: 102px;
  padding: 8px;
  border: 1px solid <%= colors.Border["1"]["fallback"].color %>;
  border: 1px solid <%= colors.Border["1"]["main"].color %>;
  background-color: <%= colors.Surface["3"].color %>;
}

.assets-block__inner--dark {
  background-color: <%= colors.Surface["4"].color %>;
}

.assets-block__buffer,
.assets-block {
  padding: 8px;
}

.assets-block__inner img {
  display: block;
  max-width: 100%;
  height: auto;
}

@supports (display: flex) {
  .assets-block {
    height: 100%;
    box-sizing: border-box;
  }

  .assets-block__inner {
    display: flex;
    height: 100%;
    box-sizing: border-box;
  }

  .assets-block__buffer {
    margin: auto;
  }
}