.color-block {
  padding: 8px;
}

.color-block__inner {
  padding: 8px;
  border: 1px solid <%= colors.Border["1"].fallback.color %>;
  background-color: <%= colors.Surface["3"].color %>;
}

.color-block__buffer {
  border: 1px solid <%= colors.Border["1"].fallback.color %>;
  padding: 16px 24px;
}

.color-block__label {
  margin: 0;
  padding: 0;
  font-weight: 500;
  font-size: 16px;
  line-height: 24px;
  color: inherit;
  word-wrap: break-word;
}

.color-block__hex {
  margin: 0;
  padding: 0;
  font-size: 16px;
  line-height: 24px;
  color: inherit;
  word-wrap: break-word;
}

@media (min-width: 0px) {
  .color-block__inner {
    border: 1px solid <%= colors.Border["1"].main.color %>;
  }
  
  .color-block__buffer {
    border: 1px solid <%= colors.Border["1"].main.color %>;
  }
}