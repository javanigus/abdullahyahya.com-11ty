.ui-kit-block__inner {
  min-height: 102px;
  padding: 8px;
  border: 1px solid <%= colors.Border["1"].fallback.color %>;
  background-color: <%= colors.Surface["3"].color %>;
}

.ui-kit-block__buffer,
.ui-kit-block {
  padding: 8px;
}

.ui-kit-block__inner img {
  display: block;
  max-width: 100%;
  height: auto;
}

@supports (display: flex) {
  .ui-kit-block {
    height: 100%;
    box-sizing: border-box;
  }

  .ui-kit-block__inner {
    display: flex;
    height: 100%;
    box-sizing: border-box;
  }

  .ui-kit-block__buffer {
    margin: auto;
  }
}

@media(min-width: 0px) {
  .ui-kit-block__inner {
    border: 1px solid <%= colors.Border["1"].main.color %>;
  }  
}