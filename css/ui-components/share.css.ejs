.share,
.content .share {
  text-decoration: none;
  border-radius: 3px;
  border: 1px solid <%= colors.Border["3"].color %>;
  box-shadow: 0 1px 0 rgb(0 0 0 / 8%);
}


.share span {
  display: block;
  margin-top: 4px;
  margin-left: 3px;
}

.share span ,
.share__img {
  float: left;
}

.share__img {
  width: 18px;
  height: 18px;
}

a.share:hover,
.hover a.share,
.content a.share:hover {
  color: <%= colors["On Surface"]["4"].color %>;
  border: 1px solid <%= colors.Grey["550"].color %>;
}