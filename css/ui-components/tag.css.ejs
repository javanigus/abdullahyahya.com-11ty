.tag {
  flex-wrap: nowrap;
  margin: 0 16px 16px 0;
  float: left;
}

.tag picture,
.tag img {
  display: block;
  margin-right: 2px;
  width: 20px;
  height: 16px;
  float: left;
  flex-shrink: 0;
}

.tag a {
  display: table-cell;
}

.tag ul,
.tag li {
  float: left;
}

.tag li {
  margin-right: 5px;
}

.tag li.last {
  margin-right: 0;
}

@supports (display: flex) {
  .tag a {
    display: block;
  }
}