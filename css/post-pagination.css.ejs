.post-pagintaion {
  padding: 3.75% 0;
}

.post-pagintaion__block {
  display: block;
  background-color: <%= colors.Grey["550"].color %>;
  color: <%= colors.Surface["1"].color %>;
  padding: 5% 0;
}

.post-pagintaion__block:hover,
.hover .post-pagintaion__block {
  background-color: <%= colors.Border["3"].color %>;
}


.post-pagintaion__border {
  width: 100%;
  height: 2px;
  font-size: 2px;
  background-color: <%= colors.Surface["1"].color %>;
}