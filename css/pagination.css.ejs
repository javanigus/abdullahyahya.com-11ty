.pagination {
  padding: 3.75% 0;
}

.pagination__inner {
  position: relative;
  padding: 0 64px;
  background-color: <%= colors.Surface["1"].color %>;
}

.pagination__list {
  display: table;
  margin-left: auto;
  margin-right: auto;
}

@supports(display: flex) {
  .pagination__list {
    display: flex;
    justify-content: center;
  }
}

.pagination__item {
  min-height: 64px;
  float: left;
}


.pagination__item--prev,
.pagination__item--next {
  position: absolute;
  top: 0;
  width: 64px;
}

.pagination__item--prev {
  left: 0;
}

.pagination__item--next {
  right: 0;
}

@media(max-width: <%= responsive.MEDIA.phone -1 %>px) {
  .pagination {
    padding-top: 20px;
    padding-bottom: 20px;
  }
}